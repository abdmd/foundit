<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.founditapp.foundit.FlightSchedule"
    tools:showIn="@layout/activity_flight_schedule"
    android:background="@drawable/back_light2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableLayout
            android:layout_width="488dp"
            android:layout_height="83dp"
            android:layout_gravity="left|top"
            android:stretchColumns="1,2,3,4"
            android:layout_marginTop="80dp"
            android:background="#66ffffff">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b18131">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Flight"
                    android:id="@+id/textView3"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date"
                    android:id="@+id/textView47"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Time"
                    android:id="@+id/textView7"
                    android:layout_column="3"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Destination"
                    android:id="@+id/textView8"
                    android:layout_column="4"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gate"
                    android:id="@+id/textView9"
                    android:layout_column="5"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvFlight"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvDate"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvTime"
                    android:layout_column="3"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvDestination"
                    android:layout_column="4"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvGate"
                    android:layout_column="5"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="477dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please check-in 1 hour prior to departure time"
            android:id="@+id/textView10"
            android:layout_gravity="left|bottom"
            android:padding="5dp" />

        <SurfaceView
            android:layout_width="202dp"
            android:layout_height="196dp"
            android:id="@+id/camera_view"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|bottom"
            android:visibility="visible" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/qrLogo"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/qrscan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Scan your QR code"
            android:id="@+id/textView11"
            android:layout_gravity="right|top"
            android:paddingTop="95dp"
            android:textSize="12dp"
            android:layout_marginRight="5dp" />

        <TableLayout
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:stretchColumns="1,2,3,4"
            android:layout_marginTop="90dp"
            android:background="#66ffffff"
            android:layout_marginLeft="55dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#060101" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Days"
                    android:id="@+id/textView51"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hours"
                    android:id="@+id/textView52"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Minutes"
                    android:id="@+id/textView53"
                    android:layout_column="3"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Seconds"
                    android:id="@+id/textView54"
                    android:layout_column="4"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00"
                    android:id="@+id/tvDay"
                    android:textColor="#0ea800"
                    android:background="#000000"
                    android:textSize="36dp"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00"
                    android:id="@+id/tvHour"
                    android:textColor="#0ea800"
                    android:background="#000000"
                    android:textSize="36dp"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00"
                    android:id="@+id/tvMinute"
                    android:textColor="#0ea800"
                    android:background="#000000"
                    android:textSize="36dp"
                    android:layout_column="3"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00"
                    android:id="@+id/tvSecond"
                    android:textColor="#0ea800"
                    android:background="#000000"
                    android:textSize="36dp"
                    android:layout_column="4"
                    android:layout_gravity="center_horizontal" />
            </TableRow>
        </TableLayout>

    </FrameLayout>
</RelativeLayout>
