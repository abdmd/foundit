<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.founditapp.foundit.MainActivity"
    android:background="@drawable/back_light2">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:id="@+id/tableLayout"
        android:stretchColumns="0,1,2,3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMap"
                android:background="@drawable/map64"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="90dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCheckin"
                android:background="@drawable/checkin64"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="90dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="3dp"
                android:paddingLeft="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSchedule"
                android:background="@drawable/airplane64"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="90dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTransport"
                android:background="@drawable/bus64"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_gravity="top|center"
                android:layout_marginTop="90dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Airport Map"
                android:id="@+id/textView"
                android:layout_column="0"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Checkin"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:paddingLeft="3dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Flight Schedule"
                android:id="@+id/textView5"
                android:layout_column="2"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Transport"
                android:id="@+id/textView6"
                android:layout_column="3"
                android:layout_gravity="center_horizontal"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnHotel"
                android:background="@drawable/hotel64"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="top|center"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnHotline"
                android:background="@drawable/service64"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="top|center"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hotels"
                android:id="@+id/textView4"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:padding="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hotlines"
                android:id="@+id/textView12"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:padding="3dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
