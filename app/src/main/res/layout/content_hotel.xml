<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.founditapp.foundit.Hotel"
    tools:showIn="@layout/activity_hotel"
    android:background="@drawable/back_light2">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/imgTune"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/tune_hotel"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tune Hotel KLIA2, \nfrom RM190*"
            android:id="@+id/textView41"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="left|center_horizontal"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/imgCapsule"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/capsule_hotel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Capsule by Container Hotel, \nfrom RM50*"
            android:id="@+id/textView42"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/imgConcorde"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/sama_sama"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Concorde Inn KLIA, \nfrom RM230"
            android:id="@+id/textView45"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center_horizontal"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/imgSama"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/concorde_hotel"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/imgSri"
            android:layout_row="2"
            android:background="@drawable/sri_packers"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/imgPlaza"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/plaza_premium"
            android:layout_gravity="left|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sama-Sama Hotel, \nfrom RM500*"
            android:id="@+id/textView44"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sri Packers Hotel, \nfrom RM55*"
            android:id="@+id/textView46"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Plaza Premium Lounge, \nfrom RM128*"
            android:id="@+id/textView43"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="left|center_horizontal"
            android:textSize="12dp" />

    </GridLayout>
</RelativeLayout>
