<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.founditapp.foundit.Transport"
    tools:showIn="@layout/activity_transport"
    android:background="@drawable/back_light2">

    <GridLayout
        android:layout_width="440dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:id="@+id/gridLayout"
        android:background="#66ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Taxi, Cab, Limo"
            android:id="@+id/textView13"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:background="#b18131"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Choose area to check estimated fare:"
            android:id="@+id/textView14"
            android:layout_row="1"
            android:layout_column="0" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerArea"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tFare"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#a30000" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/gridLayout"
        android:layout_marginTop="47dp"
        android:background="#66ffffff"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bus"
            android:id="@+id/textView22"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:background="#b18131"
            android:textColor="#ffffff"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SkyBus"
            android:id="@+id/textView23"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Star Shuttle"
            android:id="@+id/textView24"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jalan Ipoh, Pudu Sentral"
            android:id="@+id/textView33"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Aerobus"
            android:id="@+id/textView25"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="KL Sentral, Genting, PJ, Klang"
            android:id="@+id/textView34"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Airport Liner"
            android:id="@+id/textView26"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nilai, KLIA/KLIA2 areas"
            android:id="@+id/textView35"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jetbus"
            android:id="@+id/textView27"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Terminal Bersepadu Selatan\n(TBS)"
            android:id="@+id/textView36"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Transnasional"
            android:id="@+id/textView28"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Melaka / Malacca"
            android:id="@+id/textView37"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Airport Coach"
            android:id="@+id/textView29"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="KL Sentral, Batu Pahat"
            android:id="@+id/textView38"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Yoyo Bus"
            android:id="@+id/textView30"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ipoh, Taiping, Yong Peng, JB"
            android:id="@+id/textView39"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Starmart Express"
            android:id="@+id/textView31"
            android:layout_row="9"
            android:layout_column="0"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="KL Sentral, 1Utama Mall"
            android:id="@+id/textView32"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Butterworth, Ipoh, Malacca, \nSingapore"
            android:id="@+id/textView40"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textIsSelectable="false"
            android:textSize="12dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="440dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#66ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trains"
            android:id="@+id/textView19"
            android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#b18131"
            android:layout_columnSpan="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/klia_ekspres" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/klia_transit2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Direct connection to KL Sentral (RM55, 30 mins)"
            android:id="@+id/textView20"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="KL Sentral (RM55.00 39mins), Tasik Selatan (RM38.40, 32mins)\nCyberjaya/Putrajaya (RM9.40 20mins), Salak Tinggi (RM4.90 11mins)\nKLIA ERL (RM2.00 3 mins)"
            android:id="@+id/textView21"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="12dp" />

    </GridLayout>
</RelativeLayout>
